{
  "version": "1.6.0",
  "private": true,
  "main": "src/index.ts",
  "engines": {
    "node": ">= 14",
    "yarn": ">= 1.22"
  },
  "devDependencies": {
    "@types/jest": "^26",
    "@types/jquery": "^3.5.5",
    "@types/lodash": "^4",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "babel-polyfill": "^6.26.0",
    "eslint": "^7",
    "eslint-config-prettier": "^7",
    "eslint-plugin-jest": "^24",
    "eslint-plugin-prettier": "^3",
    "grunt-string-replace": "^1.3.1",
    "jest": "^26",
    "lint-staged": "^10",
    "parcel": "^1.12.3",
    "parcel-bundler": "^1.12.3",
    "prettier": "2",
    "readcontrol": "^1.0.0",
    "replace": "^1.2.0",
    "ts-jest": "^26",
    "ts-polyfill": "^3.8.2",
    "type-coverage": "^2",
    "typescript": "^4"
  },
  "scripts": {
    "build": "yarn build_shiny",
    "pre_parcel": "yarn replace_shiny_version && yarn lint && yarn typescript-check",
    "build_shiny": "yarn pre_parcel && parcel build -d ../inst/www/shared --no-minify -o shiny.js src/index.ts",
    "watch": "yarn pre_parcel && parcel run -d ../inst/www/shared -o shiny.js srcjs/index.ts",
    "replace_shiny_version": "replace --silent '\"[^\"]+\"; // @VERSION@' \"\\\"`node -e 'console.log(require(\"readcontrol\").readSync(\"../DESCRIPTION\").version)'`\\\"; // @VERSION@\" src/shiny.ts",
    "test": "jest",
    "lint": "eslint --fix --ext .ts src",
    "lint-check": "eslint --ext .ts src",
    "typescript-check": "tsc -p tsconfig.json --noEmit",
    "type-check": "type-coverage -p tsconfig.json --detail --at-least 85",
    "checks": "yarn typescript-check && yarn type-check && yarn lint-check"
  },
  "dependencies": {
    "lodash": "^4",
    "util-inspect": "https://github.com/deecewan/browser-util-inspect#c0b4350"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
