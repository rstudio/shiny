{
  "version": "1.6.0",
  "private": true,
  "main": "src/index.ts",
  "engines": {
    "node": ">= 14",
    "yarn": ">= 1.22"
  },
  "devDependencies": {
    "@types/jest": "^26",
    "@types/jquery": "patch:@types/jquery@^3.5.5#./patch/types_jquery-1.patch",
    "@types/lodash": "^4",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "babel-polyfill": "^6.26.0",
    "esbuild": "^0.8.46",
    "eslint": "^7",
    "eslint-config-prettier": "^7",
    "eslint-plugin-jest": "^24",
    "eslint-plugin-prettier": "^3",
    "grunt-string-replace": "^1.3.1",
    "jest": "^26",
    "lint-staged": "^10",
    "parcel": "^1.12.3",
    "parcel-bundler": "^1.12.3",
    "prettier": "2",
    "readcontrol": "^1.0.0",
    "replace": "^1.2.0",
    "ts-jest": "^26",
    "ts-polyfill": "^3.8.2",
    "type-coverage": "^2",
    "typescript": "^4"
  },
  "scripts": {
    "watch": "yarn run build_shiny --watch",
    "build": "yarn run build_shiny && yarn run bundle_shiny_minified",
    "prebuild": "yarn run lint && yarn run typescript-check",
    "build_shiny": "yarn run prebuild && yarn run bundle_shiny",
    "esbuild_": "echo 'building' && esbuild --bundle --define:SHINY_VERSION=\"\\\"`node -e 'console.log(require(\"readcontrol\").readSync(\"../DESCRIPTION\").version)'`\\\"\"",
    "bundle_shiny": "yarn run esbuild_ src/index.ts --sourcemap --outfile=../inst/www/shared/shiny.js",
    "bundle_shiny_minified": "yarn run esbuild_ src/index.ts --minify --sourcemap --outfile=../inst/www/shared/shiny.min.js",
    "bundle_shiny_parcel": "parcel build -d ../inst/www/shared --no-minify -o shiny.js src/index.ts",
    "watch_parcel": "yarn run prebuild && parcel run -d ../inst/www/shared -o shiny.js srcjs/index.ts",
    "replace_shiny_version": "replace --silent '\"[^\"]+\"; // @VERSION@' \"\\\"`node -e 'console.log(require(\"readcontrol\").readSync(\"../DESCRIPTION\").version)'`\\\"; // @VERSION@\" src/shiny.ts",
    "test": "jest",
    "lint": "eslint --fix --ext .ts src",
    "lint-check": "eslint --ext .ts src",
    "typescript-check": "echo 'skipping typescript-check'",
    "typescript-check_ignore": "tsc -p tsconfig.json --noEmit",
    "type-check": "type-coverage -p tsconfig.json --detail --at-least 85",
    "checks": "yarn run typescript-check && yarn run type-check && yarn run lint-check"
  },
  "dependencies": {
    "lodash": "^4",
    "util-inspect": "https://github.com/deecewan/browser-util-inspect#c0b4350"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
